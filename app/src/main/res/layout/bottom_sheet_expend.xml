<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bs_bg"
    android:padding="16dp"
    android:backgroundTint="@color/off_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg"
        android:gravity="center"
        android:backgroundTint="@color/off_bg"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/off_fg"
                android:text="Expend money"
                android:textColor="@color/fg"
                android:textSize="48sp"
                android:fontFamily="@font/dongle_bold"
                android:layout_alignParentLeft="true"
                />

            <ImageButton
                android:id="@+id/ib_expend_bs_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                android:background="@color/off_bg"
                android:padding="16dp"
                android:layout_alignParentRight="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/et_expend_expense_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="@drawable/et_bg"
            android:drawableLeft="@drawable/ic_abc"
            android:drawablePadding="8dp"
            android:hint="Expense name"
            android:inputType="textCapWords"
            android:padding="8dp"
            android:textSize="26sp" />
        <EditText
            android:id="@+id/et_expend_expense_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="@drawable/et_bg"
            android:drawableLeft="@drawable/ic_rupee"
            android:drawablePadding="8dp"
            android:hint="Expense amount"
            android:padding="8dp"
            android:fontFamily="@font/dongle_regular"
            android:inputType="numberDecimal"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn_expend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            app:backgroundTint="@color/off_fg"
            android:text="Expend"
            android:textColor="@color/bg"
            android:textSize="26sp"
            android:layout_marginVertical="32dp"
            android:layout_marginHorizontal="48dp"
            />

    </LinearLayout>

</ScrollView>